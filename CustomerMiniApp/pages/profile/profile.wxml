<view class="page">
  <view class="userinfo">
    <block>
      <image class="userinfo-avatar" src="{{avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{nickName}}</text>
    </block>
  </view>
  <view class="page__bd">
    <view class='page__bd page__bd_spacing'>
      <button wx:if='{{realCheck != 1}}' class="weui-btn" type="primary" open-type="share">实名认证</button>
      <button wx:else class="weui-btn" type="primary" open-type="share">分享</button>
    </view>
  </view>
</view>